<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/userinfobutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/versionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/word1"
        android:textSize="30sp"
        android:text="提示"/>
    <TextView
        android:id="@+id/versionText"
        android:padding="60dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textColor="@color/word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asasas\nasasas\nassas"/>
    <Button
        android:id="@+id/startBut"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/versionText"
        android:layout_margin="10dp"
        android:textColor="@color/word1"
        android:background="@drawable/carinfobutton"
        android:text="立即安装"/>

</RelativeLayout>