<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/to_msg_date"
    android:layout_gravity="center"
    android:textColor="@color/newBack"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2012-12-12"/>

    <LinearLayout
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/to_msg"
            android:gravity="right|center"
            android:text="你好"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_people"/>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/people_img"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/true_people"/>

    <TextView
        android:id="@+id/nichen"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="小星"
        android:textColor="@color/word1"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </LinearLayout>





    </LinearLayout>


</LinearLayout>