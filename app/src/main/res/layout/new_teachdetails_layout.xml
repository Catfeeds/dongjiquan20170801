<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport_home_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newBack"
    tools:context="com.weiaibenpao.demo.chislim.ui.SportHomeTypeActivity">

    <RelativeLayout
        android:id="@+id/myTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/newView">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/titleTv"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/newWord"
            android:text="动作分解"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:id="@+id/myLine"
        android:layout_below="@id/myTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backThem"/>



    <ImageView
        android:layout_below="@id/myLine"
        android:id="@+id/details_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/details_gif"
        android:id="@+id/details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="动作描述"/>

    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/left_layout"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/selector_left"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_left"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/backThem"
                android:text="上一节"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/selector_right"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_right"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/backThem"
                android:text="下一节"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
