<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/ku_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/segmented2"
                android:orientation="horizontal"
                android:background="@mipmap/wireframe"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/button21"
                    android:text="会话"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:checked="true"
                    style="@style/CustomRadioBtn2"
                    android:background="@drawable/rb_nobtn_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/button22"
                    android:text="好友"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:background="@drawable/rb_nobtn_selector1"
                    style="@style/CustomRadioBtn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>