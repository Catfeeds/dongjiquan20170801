<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <RelativeLayout
            android:background="@drawable/bg_qozen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y240">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:scaleType="fitXY" />


            <com.weiaibenpao.demo.chislim.map.customview.CircleImageView
                android:id="@+id/icon_iv"
                android:layout_width="@dimen/y60"
                android:layout_height="@dimen/y60"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                app:border_color="@android:color/white"
                app:border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_iv"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"

                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/about_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.5dp"
                    android:text="24"
                    android:textColor="#FFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.5dp"
                    android:text="粉丝"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fans_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.5dp"
                    android:text="24"
                    android:textColor="#FFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nick_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="东极圈"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/sex_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:background="@mipmap/user_sex_boy"
                        android:textColor="@android:color/white" />

                    <TextView

                        android:id="@+id/level_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="Lv3"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/add_about_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="right"
                            android:text="+ 关 注"
                            android:textColor="#FFF"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="50dp"
                    android:layout_height="15.5dp"
                    android:layout_marginTop="8.5dp"
                    android:background="@drawable/level_nick_tv"
                    android:gravity="center"
                    android:text="挑战者号"
                    android:textColor="#7a2075"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="15.5dp"
                    android:layout_marginTop="8.5dp"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:text="只有运动才可以除去各种各样的疑虑" />
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="动态"

            android:textColor="#ffffff"
            android:textSize="18sp" />

    <View
        android:id="@+id/divider_footer"
        style="@style/Line_Horizontal_Small"
        android:background="@color/divider_deep_gray" />
</LinearLayout>

