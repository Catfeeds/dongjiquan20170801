<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_pass1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiaibenpao.demo.chislim.ui.SportRecordMixedActivity">

    <RelativeLayout
        android:id="@+id/myTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackbg">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_return"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/titleTv"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/word1"
            android:textSize="16sp"
            android:text="跑步记录"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/shareTv"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/word1"
            android:text="分享"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_below="@+id/myTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_bg"
            android:orientation="vertical" >
            <!--运动参数-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_below="@id/myLine"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myDis"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/word1"
                        android:textStyle="bold"
                        android:textSize="38sp"
                        android:text="400" />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/word1"
                        android:textSize="14sp"
                        android:text="总路程:公里" />
                    <TextView
                        android:id="@+id/mySportTime"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/word1"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="2016.12.19" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@mipmap/point_l"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="0,1,2" >
                    <TableRow>
                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myStepPin"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/word1"
                                android:layout_margin="5dp"
                                android:text="173" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal" >
                                <ImageView
                                    android:id="@+id/buping_icon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/ic_count"/>
                                <TextView
                                    android:layout_toRightOf="@+id/buping_icon"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/word1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="步频(步/分)" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myStep"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/word1"
                                android:text="3" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal" >
                                <ImageView
                                    android:id="@+id/stepicon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/step"/>
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/stepicon"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:textColor="@color/word1"
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="步数(步)" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myStepFu"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/word1"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="102" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal" >
                                <ImageView
                                    android:id="@+id/bufuicon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/distance"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/bufuicon"
                                    android:textSize="14sp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/word1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="步幅(厘米)" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow>
                        <LinearLayout
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myTime"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:textSize="22sp"
                                android:layout_gravity="center"
                                android:textColor="@color/word1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:10:49" />
                            <RelativeLayout
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/timeicon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/timer"/>
                                <TextView
                                    android:layout_toRightOf="@+id/timeicon"
                                    android:textColor="@color/word1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_centerVertical="true"
                                    android:text="时间" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/mySeaHeight"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/word1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="53" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:id="@+id/haibaicon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_hill"/>
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/haibaicon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/word1"
                                    android:text="爬升(米)" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#333339"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myCalior"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_margin="5dp"
                                android:textColor="@color/word1"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="249" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal" >
                                <ImageView
                                    android:id="@+id/coricon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/carlio"/>
                                <TextView
                                    android:layout_toRightOf="@+id/coricon"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/word1"
                                    android:layout_marginLeft="5dp"
                                    android:text="热量(大卡)" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word1"
                    android:textSize="16sp"
                    android:text="运动轨迹"/>
                <ImageView
                    android:id="@+id/trace_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true" />
            </LinearLayout>

            <!--运动配速-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/word1"
                    android:text="运动配速"
                    />
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/zoom_layout"
                        android:background="@color/word1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/equity_speed"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5'14''"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="平均配速"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/fast_speed"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6'14"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="最慢配速"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/lower_speed"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3'14"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="最快配速"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:id="@+id/title_layout"
                        android:layout_below="@id/zoom_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/word1"
                            android:text="公里"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/word1"
                            android:text="配速"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/SpeedRecyclerView"
                        android:layout_below="@+id/title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

            <!--运动图表-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/word1"
                    android:text="运动图表"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/step"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/word1"
                                android:text="步幅"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="平均:"/>

                            <TextView
                                android:id="@+id/eachStepFu"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="24"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="最快:"/>

                            <TextView
                                android:id="@+id/fastStepFu"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="30"/>

                        </LinearLayout>
                        <com.weiaibenpao.demo.chislim.customs.StepCustomView
                            android:id="@+id/flutlypic"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/speed"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/word1"
                                android:text="步频"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="平均:"/>

                            <TextView
                                android:id="@+id/eachStepPin"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="4"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="最快:"/>

                            <TextView
                                android:id="@+id/fastStepPin"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="16"/>

                        </LinearLayout>
                        <com.weiaibenpao.demo.chislim.customs.SpeedCustomView
                            android:id="@+id/speedpic"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/heart"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/word1"
                                android:text="配速"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="平均:"/>

                            <TextView
                                android:id="@+id/eachPeiSu"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="70"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:textColor="@color/word1"
                                android:text="最高:"/>

